                -I /rsrch6/home/genomic_med/jejennings/vcfs/platypus/VLewis-Osteosarcoma-NA-Lewis-01-PA14-1067-dad-s-N_160502_0386_0329_0330_0275_0276_0344_MERGE_MERGE-CGTACTAGTAGATCGC.wa_recalibed.bam \
