        singularity exec gatk.sif_latest.sif --java-options "-Djava.io.tmpdir=/tmp/$SLURM_JOBID -Xms20G -Xmx20G -XX:ParallelGCThreads=2" HaplotypeCaller \
                -R Homo_sapiens_assembly19.fasta \
